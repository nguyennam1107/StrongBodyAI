# Cấu hình môi trường
NODE_ENV=development
PORT=3000

# Redis Configuration (cho queue management)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret (nếu cần authentication)
JWT_SECRET=your-super-secret-jwt-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
# Cấu hình các tài khoản Gmail
# Format: EMAIL_USER_1=email@gmail.com
# Format: EMAIL_PASS_1=app_password
EMAIL_USER_1=your-email-1@gmail.com
EMAIL_PASS_1=your-app-password-1

EMAIL_USER_2=your-email-2@gmail.com
EMAIL_PASS_2=your-app-password-2

EMAIL_USER_3=your-email-3@gmail.com
EMAIL_PASS_3=your-app-password-3

# Số lượng tài khoản email có sẵn
EMAIL_ACCOUNTS_COUNT=3

# Giới hạn gửi email mỗi tài khoản mỗi ngày (Gmail limit là 500/day)
DAILY_EMAIL_LIMIT_PER_ACCOUNT=450

# Delay giữa các email (milliseconds) để tránh spam
EMAIL_SEND_DELAY=1000
